{
  "name": "prettier-tasks",
  "license": "MIT",
  "devDependencies": {
    "eslint-config-prettier": "2.6.0",
    "eslint-plugin-prettier": "2.3.1",
    "eslint": "4.8.0",
    "husky": "0.14.3",
    "lint-staged": "4.2.3",
    "prettier": "1.7.4"
  },
  "lint-staged": {
    "*.js": ["npm run lint:fix:script", "git add"],
    "*.json": ["npm run lint:fix:json", "git add"],
    "*.scss": ["npm run lint:fix:style", "git add"]
  },
  "scripts": {
    "lint": "eslint -c .eslintrc.yaml --ignore-path .gitignore **/*.js",
    "lint:fix": "npm run lint:fix:script && npm run lint:fix:style && npm run lint:fix:json",
    "lint:fix:script": "npm run lint -- --fix",
    "lint:fix:style": "prettier --single-quote --print-width=80 --write '**/*.scss'",
    "lint:fix:json": "prettier --single-quote --print-width=120 --write '**/*.json'",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lipis/prettier-tasks"
  },
  "private": true
}
